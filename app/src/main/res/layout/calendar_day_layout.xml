<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/progress_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toTopOf="@+id/calendarDayText"
        app:layout_constraintEnd_toStartOf="@+id/calendarDayText"
        app:layout_constraintStart_toStartOf="@+id/calendarDayText"
        app:layout_constraintTop_toTopOf="@+id/calendarDayText" />

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="22" />


</androidx.constraintlayout.widget.ConstraintLayout>